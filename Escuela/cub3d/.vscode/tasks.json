{
// Vea https://go.microsoft.com/fwlink/?LinkId=733558 
	// para la documentaci√≥n acerca del formato tasks.json
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "clang build active file",
			"command": "/usr/bin/clang",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "todos",
			"command": "/usr/bin/gcc",
			"args": [
					"-g",
					"${fileDirname}/file_reader.c",
					"${fileDirname}/gnl/get_next_line_bonus.c",
					"${fileDirname}/gnl/get_next_line_utils_bonus.c",
					"${fileDirname}/libft.a",
					"${fileDirname}/mapper.c",
					"${fileDirname}/archives.c",
					"-o",
					"${fileDirname}/a.out"
			],
			"options": {
					"cwd": "/usr/bin"
			},
			"problemMatcher": [
					"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-I",
				"/usr/local/include/",
				"main.c",
				"-L",
				"/usr/local/lib",
				"-lmlx",
				"-framework",
				"OpenGL",
				"-framework",
				"AppKit",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}